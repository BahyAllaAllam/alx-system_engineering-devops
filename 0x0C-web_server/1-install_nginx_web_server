#!/usr/bin/env bash

apt-get update
apt-get install -y nginx

echo "server {
    listen 80;
    server_name _;

    location / {
        root /var/www/html;
        index index.html;
    }

    location = / {
        return 200 'Hello World!\n';
    }
}" > /etc/nginx/sites-available/default

service nginx restart

